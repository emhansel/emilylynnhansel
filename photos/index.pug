            img(src="../assets/img/dancing/masonry/13.jpg" data-action="zoom" data-caption="Photograph by Jason Lam | 2016")
          div.grid-item
            img(src="../assets/img/dancing/masonry/14.png" data-action="zoom" data-caption="<i>KOTO</i> | Choreography by Alonzo King | Photograph by Kyle Scharf | 2015")
          div.grid-item
            img(src="../assets/img/dancing/masonry/6.5.jpg" data-action="zoom" data-caption="<i>BIG SALT</i> | Photograph by Summer Wilson for The Anata Project | 2019")

    .full-screen-caption
