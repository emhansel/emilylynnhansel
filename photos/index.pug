extends ../pug/_main_template.pug
block title
  title Emily Hansel | Photos
  link(rel="stylesheet", href="../assets/css/index.css")
block content
  .media
    .home-button
      a(href="/" alt="Emily")
        img(src="../assets/img/dancing/crop/4.png")
    .photo-container
      .x
        h1#photo Photos
        div(class="grid js-masonry" data-masonry='{ "itemSelector": ".grid-item", "columnWidth": 266 }')
          
          //- each val, index in values
          //-   img(src="../assets/img/dancing/carousel/" + index + "}.jpg"  width="100%" data-caption=val)
          div.grid-item
            img(src="../assets/img/dancing/masonry/1.jpg" data-action="zoom" data-caption="<i>The Exceptionally Elderly Overweight Black Man Phoenix</i> | Choreography by Robert Moses | Photograph by Jim Coleman | 2019")
          div.grid-item
            img(src="../assets/img/dancing/masonry/2.jpg" data-action="zoom" data-caption="<i>BIG SALT</i> | Photograph by Summer Wilson for The Anata Project | 2019")
          div.grid-item
            img(src="../assets/img/dancing/masonry/3.jpg" data-action="zoom" data-caption="<i>Belong Not</i> | Choreography by Chuck Wilt for Post:Ballet | Photograph by Alexander Reneff-Olson | 2020")
          div.grid-item
            img(src="../assets/img/dancing/masonry/4.jpg" data-action="zoom" data-caption="<i>Roaratorio</i> | Choreography by Merce Cunningham | Photograph by Hillary Goidell | 2019")
          div.grid-item
            img(src="../assets/img/dancing/masonry/5.jpg" data-action="zoom" data-caption="<i>Biped</i> | Choreography by Merce Cunningham | Photograph by Hillary Goidell | 2019")
          div.grid-item
            img(src="../assets/img/dancing/masonry/6.jpg" data-action="zoom" data-caption="<i>Simple Symphony</i> | Choreography by Mark Foehringer | Photograph by Matt Haber | 2019")
          div.grid-item
